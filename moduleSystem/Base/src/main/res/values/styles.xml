<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="TextAppearance" parent="TextAppearance.AppCompat" />
    <style name="TextAppearance.TallyNumInputItem" parent="TextAppearance">
        <item name="android:background">@drawable/bg_tally_num_input_item</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_margin">1px</item>
    </style>

    <style name="text_size_huge">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>
    <style name="text_size_big">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
    <style name="text_size_medium">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
    <style name="text_size_small">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>


    <style name="text_size_huge_bold" parent="text_size_huge">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_size_big_bold" parent="text_size_big">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_size_medium_bold" parent="text_size_medium">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_size_small_bold" parent="text_size_small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_huge_title" parent="text_size_huge_bold">
        <item name="android:textColor">@color/bleak_33</item>
    </style>

    <style name="text_big_title" parent="text_size_big">
        <item name="android:textColor">@color/bleak_33</item>
    </style>
    <style name="top_bar_title">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bleak_33</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="text_medium_label" parent="text_size_medium">
        <item name="android:textColor">@color/black_50</item>
    </style>
</resources>