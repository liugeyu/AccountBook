<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="TextAppearance" parent="TextAppearance.AppCompat" />
    <style name="TextAppearance.TallyNumInputItem" parent="TextAppearance">
        <item name="android:background">@drawable/bg_tally_num_input_item</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_margin">1px</item>
    </style>



    <style name="BaseDialogBottomFragmentStyle" parent="BaseDialogFragmentStyle">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowAnimationStyle">
            @style/BaseDialogBottomFragmentStyle.AnimationStyle
        </item>


    </style>

    <style name="BaseDialogLeftFragmentStyle" parent="BaseDialogFragmentStyle">
        <item name="android:windowAnimationStyle">
            @style/BaseDialogLeftFragmentStyle.AnimationStyle
        </item>
    </style>

    <style name="BaseDialogRightFragmentStyle" parent="BaseDialogFragmentStyle">
        <item name="android:windowAnimationStyle">
            @style/BaseDialogRightFragmentStyle.AnimationStyle
        </item>
    </style>

    <style name="BaseDialogUpFragmentStyle" parent="BaseDialogFragmentStyle">
        <item name="android:windowAnimationStyle">@style/BaseDialogUpFragmentStyle.AnimationStyle
        </item>
    </style>

    <style name="BaseDialogBottomFragmentStyle.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_base_dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_base_dialog_bottom_out</item>
    </style>

    <style name="BaseDialogUpFragmentStyle.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_base_dialog_up_in</item>
        <item name="android:windowExitAnimation">@anim/anim_base_dialog_up_out</item>
    </style>

    <style name="BaseDialogLeftFragmentStyle.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_base_dialog_left_in</item>
        <item name="android:windowExitAnimation">@anim/anim_base_dialog_left_out</item>
    </style>

    <style name="BaseDialogRightFragmentStyle.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_base_dialog_right_in</item>
        <item name="android:windowExitAnimation">@anim/anim_base_dialog_right_out</item>
    </style>
    <style name="BaseDialogFragmentStyle" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="text_size_huge">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>
    <style name="text_size_big">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
    <style name="text_size_medium">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
    <style name="text_size_small">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>


    <style name="text_size_huge_bold" parent="text_size_huge">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_size_big_bold" parent="text_size_big">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_size_medium_bold" parent="text_size_medium">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_size_small_bold" parent="text_size_small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_huge_title" parent="text_size_huge_bold">
        <item name="android:textColor">@color/bleak_33</item>
    </style>

    <style name="text_big_title" parent="text_size_big">
        <item name="android:textColor">@color/bleak_33</item>
    </style>
    <style name="top_bar_title">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bleak_33</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="text_medium_label" parent="text_size_medium">
        <item name="android:textColor">@color/black_50</item>
    </style>
</resources>